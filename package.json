{
  "name": "excalibur",
  "version": "0.0.1",
  "description": "Multi-agent orchestration CLI with debate, critique, voting and consensus",
  "main": "dist/index.js",
  "bin": {
    "excalibur": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js --force"
  },
  "keywords": [
    "ai",
    "cli",
    "orchestration",
    "debate",
    "consensus",
    "multi-agent",
    "llm",
    "artificial-intelligence",
    "round-table"
  ],
  "author": "delexw",
  "license": "MIT",
  "homepage": "https://github.com/delexw/excalibur#readme",
  "bugs": {
    "url": "https://github.com/delexw/excalibur/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delexw/excalibur.git"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "agents.json",
    "prompts/",
    "scripts/",
    "README.md",
    "CLAUDE.md"
  ],
  "preferGlobal": true,
  "dependencies": {
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/node": "^25.3.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
